{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make clean && make build-debug"
        },
        {
            "label": "test",
            "type": "shell",
            "command": "make acceptance-test"
        },
        {
            "label": "run-loose",
            "type": "shell",
            "command": "go run -race main.go diff --base-file test/simple.json --second-file test/simple2.json --loose"
        },    
        {
            "label": "run",
            "type": "shell",
            "command": "go run -race main.go diff --base-file test/simple.json --second-file test/simple2.json"
        },
        {
            "label": "run-html",
            "type": "shell",
            "command": "go run -race main.go diff --base-file test/simple.json --second-file test/simple2.json --html"
        },
        {
            "label": "clean-changelog",
            "type": "shell",
            "command": "rm changelog*.json || true && rm changelog*.html || true"
        }        
    ]
}