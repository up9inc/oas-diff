    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Diff",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "debugAdapter": "dlv-dap",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "diff",
                "--file",
                "test/simple.json",
                "--file2",
                "test/simple2.json"
            ]
        }
    ]        
}